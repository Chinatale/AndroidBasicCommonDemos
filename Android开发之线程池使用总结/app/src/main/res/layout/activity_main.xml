<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="www.ctrip.com.android.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="threadPoolExecutor"
        android:text="ThreadPoolExecutor的使用"/>
    <Button
        android:layout_width="wrap_content"
        android:text="fixedThreadPool的使用"
        android:onClick="fixedThreadPool"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:text="SingleThreadPool的使用"
        android:onClick="singleThreadPool"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:text="cachedThreadPool的使用"
        android:onClick="cachedThreadPool"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:text="ScheduledThreadPool的使用"
        android:onClick="scheduledThreadPool"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:text="submit"
        android:onClick="通过submit提交到线程池"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:text="自定义线程池的使用"
        android:onClick="customThreadPool"
        android:layout_height="wrap_content"/>
</LinearLayout>
